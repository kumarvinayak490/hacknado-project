<%- include('./includes/base', {title:'Donate'}) %>
<link rel="stylesheet" href="/static/css/donation.css">
<script src="/static/javascript/donation-form.js"defer></script>
</head>

<body>

        
    <section class="section donation-section">

        

        <nav class="nav-bar">

            <h1>Spread Smiles</h1>


           <h2>Need Help? <span><i class="fas fa-phone"></i></span></h2>

        </nav>

        <div class="section-center">

        <div class="container">

            <form >

                <div class="step step-1 active">

                    <h3 class="step-title"> Please help us with pick-up location</h3>
                    
                 <div class="location-input"><input type="text" placeholder="street, block, house number etc"> <button type="button">Search</button></div>
                 <div class="btn-container"><button type="button" class="btn next-btn proceed-btn">Proceed</button></div>
                    
                </div>

                

                <div class="step step-2 active">

                    <h3 class="step-title"> Please pick items to donate</h3>



                    <div class="items">

                        <div class="item">

                            <div class="item-info">
                                <img src="/images/clothes.svg" alt="item">
                                <h4>Clothes</h4>
                            </div>

                            <div class="quantity">
                                <label for="clothes-qty">Qty:</label>
                                <input type="number" name="clothes-qty" id="clothes-qty" value="0">
                            </div>

                        </div>

                        <div class="item">

                            <div class="item-info">
                                <img src="/images/footwear.svg" alt="item">
                                <h4>Footwear</h4>
                            </div>

                            <div class="quantity">
                                <label for="clothes-qty">Qty:</label>
                                <input type="number" name="clothes-qty" id="clothes-qty" value="0">
                            </div>

                        </div>

                        <div class="item">

                            <div class="item-info">
                                <img src="/images/stationary.svg" alt="item">
                                <h4>Stationary </h4>
                            </div>

                            <div class="quantity">
                                <label for="clothes-qty">Qty:</label>
                                <input type="number" name="clothes-qty" id="clothes-qty" value="0">
                            </div>

                        </div>



                    </div>

                   
                    <div class="btns">
                        <button type="button" class="btn previous-btn">Prev</button>
                    <button type="button" class="btn next-btn">Next</button>
                    </div>
                </div>

                <div class="step step-3">

                    <h3 class="step-title"> Please pick items the date </h3>

                    <div class="schedular">

                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" id="date" name="date">
                    </div>
                    <div class="form-group">
                        <label for="time">Time</label>
                        <input type="time" id="time" name="time">
                    </div>

                </div>

                    <div class="btns">
                        <button type="button" class="btn previous-btn">Prev</button>
                    <button type="Submit" class="btn submit-btn">Submit</button>
                    </div>

                </div>

            </form>
        </div>
    </div>
    </section>

    <!-- <%-include('./includes/footer') %> -->
</body>
</html>


